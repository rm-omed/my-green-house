<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".data_enc_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encryption"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert your data and make it safe"
            android:textSize="14sp"
            android:textColor="@color/Black2"
            android:layout_marginTop="6dp" />

        <!-- Input -->
        <EditText
            android:id="@+id/edt_insetdata"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Insert your data"
            android:paddingHorizontal="12dp"
            android:textColorHint="@color/Black2"
            android:background="@drawable/input_strock"
            android:layout_marginTop="16dp" />

        <!-- Remark -->
        <TextView
            android:id="@+id/txt_r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remark"
            android:textSize="14sp"
            android:textColor="@color/Black2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Result -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Blue_v1"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your data will be encrypted using a special method"
            android:textSize="14sp"
            android:textColor="@color/Black2"
            android:layout_marginTop="4dp" />

        <!-- Encrypted Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_strock"
            android:padding="12dp"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/txt_data1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encrypted data 1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Black2" />

            <TextView
                android:id="@+id/txt_data2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encrypted data 2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Black2"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Done Button -->
        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bachground_button_green"
            android:text="Done"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
